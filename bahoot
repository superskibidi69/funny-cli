}

case "$1" in
  prank) prank ;;
  deploy) rocket ;;
  chaos) chaos ;;
  matrix) matrix ;;
  doctor) doctor ;;
  banner) banner ;;
  update) update ;;
  self-destruct) self_destruct ;;
  troll) troll ;;
  party) party ;;
  scan) scan ;;
  boot) boot ;;
  hack) hack ;;
  glitch) glitch ;;
  ball) ball ;;
  squid) squid ;;
  duck) duck ;;
  crab) crab ;;
  frog) frog ;;
  fortune) fortune ;;
  echo) shift; echo_cmd "$@" ;;
  clear) clear_cmd ;;
  credits) credits ;;
  help|"") help_menu ;;   # no banner here
  *) help_menu ;;
esac
