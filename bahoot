  quotes=("You will write bug-free code today." "Bahoot believes in you." "Your terminal is your canvas." "Don't forget to hydrate.")
  echo -e "${GREEN}ðŸ€ Fortune:${NC} ${quotes[$RANDOM % ${#quotes[@]}]}"
}

